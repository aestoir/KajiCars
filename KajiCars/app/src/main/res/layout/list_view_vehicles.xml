<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:layout_width="15dp"
            android:layout_height="110dp" tools:srcCompat="@drawable/default_car"
            android:id="@+id/list_view_image" android:layout_weight="1" app:srcCompat="@drawable/default_car"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="140dp"
            android:layout_height="100dp" android:layout_weight="1">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/list_view_student_id"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/list_view_firstname"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/list_view_lastname"/>
    </LinearLayout>
</LinearLayout>